<div id="loginContainer" class="{{ signin }} ">
	<div class="innerContainer">
		<div class="loginLogoWrap">
			<img src="/imgs/logo.png" id="loginLogo"/>
		</div>
		{{#if login }}
			<div class="loginFormWrap clearfix">
				<img src="/imgs/barcode.png" id="barcode"/>
				<div id="loginForm">
					<input type="text" class="loginInput" placeholder="邮箱或者手机号码" required/>
					<input type="password" class="loginInput" placeholder="请输入密码" required/>
					<div>
						<input type="checkbox" class="loginCheckbox" id="rememberMe"> <label
							for="rememberMe">记住密码</label>
						<a id="forgetPassword" href="./">忘记密码?</a>
					</div>
					<button id="login">登录</button>
					<div class="signupWrap">
						还没有账号? <a data-route="signup" href="#">立即注册</a>
					</div>
					<div class="vendorLogin">
						<i class="fa fa-qq fa-lg" title="QQ"></i>
						<i class="fa fa-weibo  fa-lg" title="新浪微博"></i>
						<i class="fa fa-weixin  fa-lg" title="微信"></i>
					</div>
				</div>
			</div>
		{{else}}
			<div id="signupForm" class="clearfix">
				<h3>注册</h3>
				<input type="text" class="signupInput" placeholder="昵称(支持中英文, 不包含特殊字符,少于20字)">
				<input type="text" class="signupInput" placeholder="手机号码(必填)">
				<div class="vertifyCodeWrap">
					<input type="text" placeholder="验证码(必填)">
					<button>获取验证码</button>
				</div>
				<input type="password" class="signupInput" placeholder="设置密码(密码格式为英文,数字,6-20个字符格式)">
				<input type="password" class="signupInput" placeholder="确认密码">
				<input type="checkbox" id="acceptPolicy" checked><label for="acceptPolicy">我已阅读并接受《ItemHousing用户注册条款》</label>
				<button id="signup">注册</button>
				<div class="navToLogin">已有账号, <a data-route="login" href="#">去登录</a></div>
			</div>
		{{/if}}
	</div>
	{{#unless login}}
		<div class="vendorLogin" style="margin-top: 80px;">
			<i class="fa fa-qq fa-lg" title="QQ"></i>
			<i class="fa fa-weibo  fa-lg" title="新浪微博"></i>
			<i class="fa fa-weixin  fa-lg" title="微信"></i>
		</div>
	{{/unless}}
</div>